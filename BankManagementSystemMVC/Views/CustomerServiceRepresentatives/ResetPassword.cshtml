@model CustomerServiceRepresentativeDoubleView
@{
    ViewData["Title"] = "Reset Password";
    string pass = "";
}

<form asp-action="ResetPassword">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label>Current Password</label>
        <input asp-for="@pass" class="form-control rounded-pill" />
    </div>
    <div class="form-group">
        <label asp-for="viewModel.password">New Password</label>
        <input asp-for="viewModel.password" class="form-control rounded-pill" />
        <span asp-validation-for="viewModel.password"></span>
    </div>

    <div class="form-group">
        <label asp-for="viewModel.confirmPassword"></label>
        <input asp-for="viewModel.confirmPassword" class="form-control rounded-pill" />
        <span asp-validation-for="viewModel.confirmPassword"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn-success form-control rounded-pill" />
    </div>
</form>

<a asp-action="CustomerServiceRepresentativeHome">Back</a>
