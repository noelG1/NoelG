<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="CustomerServiceRepresentativeHome">Back</a>
    <a onclick="ResetPassword()">Change Password</a>
</div>

<div class="modal fade" id="myModal">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title text-center text-success">Reset Password</h3>
            </div>

            <div class="modal-body" id="myModalBodyDiv">
            </div>
        </div>
    </div>

</div>

<script>
    var ResetPassword = function () {
        var url = "/CustomerServiceRepresentatives/ResetPassword/";

        $("#myModalBodyDiv").load(url, function () {
            $("#myModal").modal("show");

        })

    }
</script>