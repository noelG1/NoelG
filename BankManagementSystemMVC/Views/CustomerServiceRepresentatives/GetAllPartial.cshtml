@model IEnumerable<BankManagementSystemApi.Models.CustomerServiceRepresentative>
@using NonFactors.Mvc.Grid


@(Html
       .Grid(Model)
       .Build(columns =>
       {
           columns.Add(model => model.firstName).Titled("Name");
           columns.Add(model => model.lastName).Titled("Surname");

           columns.Add(model => model.address).Titled("Age");


       })

        .Empty("No data found")
        .Id("my-ajax-grid")
        .Pageable(pager =>
        {
            pager.PagesToDisplay = 2;
            pager.RowsPerPage = 2;
        })
        .Filterable()
        .Sortable()
   )


