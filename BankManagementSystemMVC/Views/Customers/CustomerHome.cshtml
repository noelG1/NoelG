
<head>
    <style>
       .row:hover{
           transform:scale(1.1);
       }
    </style>
</head>

<body>
    <div class="container col-md-5 text-center">
        <h2 class="text-success text-center py-5">Welcome <br /> @User.Identity.Name</h2>
       
            <div onclick="Profile()" class="row bg-success rounded-pill" >
              <h3>Profile</h3>
            </div>
      
    </div>


    <div class="modal fade" id="myModal">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h3 class="modal-title text-center text-success">Profile</h3>
                </div>

                <div class="modal-body" id="myModalBodyDiv">
                </div>
            </div>
        </div>

    </div>

   <script>
          var Profile=function(){
            var url = "/Customers/Profile/";

            $("#myModalBodyDiv").load(url,function(){
                $("#myModal").modal("show");

            })
           
          }
   </script>
</body>