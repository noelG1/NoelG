@model LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}
<head>
    <style>
        .container{
          padding:50px;
          position:center;
          text-align:center; 
        }
    </style>
</head>
<body>
    <div class="container col-md-5">
   <h1>Bank Management System</h1>
  <div class="mainLogin">
      <h3 class="text-danger">@ViewBag.msg</h3>
   <form method="post">
     <div class=" form-group">
       <label asp-for="email"></label>
         <input asp-for="email" class="rounded-pill form-control text-center" placeholder="Abebe@example.com" />
         <span asp-validation-for="email" class="text-danger"></span>
     </div>

     <div class="form-group">
         <label asp-for="password"></label>
         <input asp-for="password" class="form-control rounded-pill text-center" />
        <span asp-validation-for="password" class="text-danger"></span>
     </div>

     <div class="form-group">
       <input class="btn btn-success rounded-pill form-control" type="submit" value="Login" />
     </div>
   </form>
  </div>
</div>
</body>